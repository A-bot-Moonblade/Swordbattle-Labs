worker_processes 1;

events {
  worker_connections 1024;
}

http {
  server {
    listen <%= ENV['PORT'] || 80 %>;

    location / {
      default_type text/html;
      return 200 "Hello, World!";
    }

    # Log configuration
    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
  }
}
